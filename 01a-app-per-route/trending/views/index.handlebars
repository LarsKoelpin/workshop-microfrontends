<html lang="en">
<head>
    <title>Twttr</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/bootstrap-reboot.min.css">
    <base href="/">
</head>

<body>
<div class="container">
    <div class="navbar">
        <div class="nav">
            <a class="nav-link" href="http://{{tweetsHost}}">Tweets</a>
            <a class="nav-link active" href="#">Trending</a>
            <a class="nav-link" href="http://{{profileHost}}/?id={{currentUser}}">{{currentUser}}</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h2>Trending</h2>
                    {{#each trends}}
                        <div class="strong">
                            {{this}}
                        </div>
                    {{/each}}
                </div>
                <button class="btn btn-outline-primary" onclick="window.location.reload()">Stay fresh!</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>