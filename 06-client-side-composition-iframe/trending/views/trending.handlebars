<div class="card" style="padding: 1em">
    <link href="http://localhost:4002/css/bootstrap.min.css" rel="stylesheet" />
    <div class="card-body">
        <h2>Trending</h2>
        {{#each trends}}
            <div class="strong">
                {{this}}
            </div>
        {{/each}}
    </div>
    <button class="btn btn-outline-primary" onclick="window.location.reload()">Stay fresh!</button>

    <script>
        window.addEventListener('message', (e) => {
            console.log("Recieve Event in Trending:", e)
            window.location.reload();
        });
    </script>
</div>
